{
	"name": "unniqqud",
	"version": "0.1.0",
	"description": "Remove niqqud (Hebrew vowel diacritics) and/or Ta'amim (Hebrew cantillation diacritics) from text.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"test": "ts-mocha test/**.ts",
		"prepare": "tsc",
		"doc": "npm run prepare && npx typedoc src",
		"doc:publish": "npm run doc && npx gh-pages -d docs -b docs -f"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yehuthi/unniqqud.git"
	},
	"keywords": [
		"alphabet",
		"hebrew",
		"script",
		"letters",
		"tokens",
		"niqqud",
		"taamim"
	],
	"author": "Yehuthith",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/yehuthi/unniqqud/issues"
	},
	"homepage": "https://github.com/yehuthi/unniqqud#readme",
	"devDependencies": {
		"@types/expect": "^24.3.0",
		"@types/mocha": "^9.0.0",
		"gh-pages": "^3.2.3",
		"ts-mocha": "^8.0.0",
		"typedoc": "^0.22.9",
		"typescript": "^4.4.4"
	}
}
